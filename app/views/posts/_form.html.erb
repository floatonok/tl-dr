<%= form_for [:user, @post] do |f| %>
<% if post.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

  <ul>
    <% post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control", placeholder: "Enter Post Title", autofocus: true%>
</div>

<div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body, :rows => "20", class: "form-control", placeholder: "Enter Post Content", autofocus: true %>
</div>

<div class="form-group">
  <%= f.submit %>
</div>
<% end %>
