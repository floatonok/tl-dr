</div>

<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
  <h1>Login</h1>
  <%= form_tag sessions_path do %>

  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email,nil, class: "form-control", placeholder: "Enter email", autofocus: true %>
  </div>

  <div class="form-group">
    <%= label_tag :password%>
    <%= password_field_tag :password,nil, class: "form-control", placeholder: "Enter Ps", autofocus: true %>
  </div>

  <div class="form-group">
    <div class = "actions">
      <%= submit_tag "Sign In", class:"btn btn-success pull-left" %>
    </div>

  </div>
  <%end %>
</div>

<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
</div>
