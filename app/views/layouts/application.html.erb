<!DOCTYPE html>
<html>
<head>
  <title>Tldr</title>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Abel" rel="stylesheet">


  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to image_tag("logo.png"), home_path, class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if user_logged_in? %>
          <%= current_user.username %>
          <button type="button" class="btn btn-default navbar-btn"><%= link_to 'New Post', new_user_post_path(current_user) %></button>
          <button type="button" class="btn btn-default navbar-btn"><%= link_to 'Sign Out', sign_out_path, method: :delete %></button>
          <% else %>
          <button type="button" class="btn btn-default navbar-btn"><%= link_to 'Sign In', sign_in_path %></button>
          <button type="button" class="btn btn-default navbar-btn"><%= link_to 'Sign Up', new_user_path %></button>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <% flash.each do |name, message|%>
    <div class="alert alert-info fade-in flash-message flash-message-<%= name %>">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <%= message %>
    </div>
  </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
